<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.ac.iitp.anwesha" >

    <application
        android:name=".AllIDS"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".WelcomeScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".Event" >
        </activity>
        <activity
            android:name=".Sponser"
            android:label="@string/title_activity_sponser"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".EventDetails"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".EventList"
            android:label="@string/title_activity_event_list"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <receiver android:name=".Reminder" />

        <activity
            android:name=".TechnicalEvent"
            android:label="@string/title_activity_technical_event"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".Team"
            android:label="@string/title_activity_team"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".About"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
